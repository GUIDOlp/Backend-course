<%-include ("./layout")-%>

<body class="p-4">
    <section class="p-4 bg-secondary">
        <h2 class="text-primary">Vista de Productos</h2>
        <% if (productos.length===0) { %>
        <h2 class="bg-light p-4 text-danger">
            No se encontraron productos
        </h2>
        <% } else { %>
        <table class="table table-dark">
            <thead>
                <tr>
                    <th>Nombre</th>
                    <th>Precio</th>
                    <th>Foto</th>
                </tr>
            </thead>
            <tbody>
                <% productos.forEach(product=> { %>
                <tr>
                    <td class="align-middle"><%= product.name %></td>
                    <td class="align-middle"><%= product.price %></td>
                    <td class="align-middle">
                        <img
                            src="<%= product.picture %>"
                            alt="<%= product.name %>"/>
                    </td>
                </tr>
                <% }) %>
            </tbody>
        </table>
        <% } %>
        <div class="mt-3">
            <a href="/productos">
                <button class="btn btn-warning">Agregar producto</button>
            </a>
        </div>
    </section>
</body>
</html>